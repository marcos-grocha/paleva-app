<h3>Criar porção</h3>
<%= form_with model: [ @dish, @additional_feature ] do |f| %>
  <div class="text-start">
    <%= f.label :name, 'Nome da Característica', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <br>
  <%= f.submit 'Salvar', class: 'btn btn-outline-warning' %>
<% end %>
