<%= form_with model: @pre_registrations do |f| %>
    <div class="text-start">
        <%= f.label :cpf, class: 'form-label' %>
        <%= f.text_field :cpf, class: 'form-control' %>
    </div>

    <div class="text-start">
        <%= f.label :email, class: 'form-label' %>
        <%= f.text_field :email, class: 'form-control' %>
    </div><br>

    <div>
        <%= link_to 'voltar', employee_pre_registrations_path, class: 'btn btn-outline-dark' %>
        <%= f.submit 'Cadastrar', class: 'btn btn-outline-warning' %>
    </div>
<% end %>
